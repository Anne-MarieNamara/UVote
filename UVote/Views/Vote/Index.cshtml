@using UVote.Models
@model IEnumerable<Election>
@{
    ViewBag.Title = "Index";
}

<h2>Elections</h2>
<div class="col-md-4 col-md-offset-4">
    @if (Model == null)
    {
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>No pending campaigns!</strong>.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="panel panel-info">
                <div class="panel-heading">@Html.ActionLink(@item.RoleTitle, "Candidates/" + @item.CampaignId, "Vote")</div>
                <div class="panel-body">
                    <h6>Role details: @item.RoleDetails</h6>
                    <h6>Term: @item.OfficeTerm</h6>
                    <h6>Campaign start: @item.CampaignStart</h6>
                    <h6>Campaign end: @item.CampaignEnd</h6>
                </div>
            </div>
        }
    }
</div>