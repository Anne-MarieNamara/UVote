@model UVote.Models.CandidateModel
@{
    ViewBag.Title = "Add candidate";
}
@section Logged{
    @if (Session["employeeId"] == null)
    {
        Response.Redirect(Url.Action("Login", "Admin"));
    }
}
<h2>Add candidate</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation">@Html.ActionLink("Add campaign", "Create", "Campaign")</li>
            <li role="presentation" class="active">@Html.ActionLink("Add candidate", "Create", "Candidate")</li>
            <li role="presentation">@Html.ActionLink("Add student", "Create", "Student")</li>
            <li role="presentation">@Html.ActionLink("Admin Home", "Index", "Admin")</li>
        </ul>
    </div>
    
    <div class="col-md-8">
        @using (Html.BeginForm("Create", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.CampaignId, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.CampaignId, Model.CampaignIds, "Select campaign")
                        @Html.ValidationMessage("RoleTitle", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CandidateId, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.CandidateId)
                        @Html.ValidationMessageFor(model => model.CandidateId, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.LastName)
                        @Html.ValidationMessageFor(model => model.LastName, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Manifesto, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(model => model.Manifesto, htmlAttributes: new { @rows = 5, @cols = 30 })
                        @Html.ValidationMessageFor(model => model.Manifesto, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ImageUrl, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        <input type="file" name="ImageUrl" />
                        @Html.ValidationMessageFor(model => model.ImageUrl, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PreviousHistory, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(model => model.PreviousHistory, htmlAttributes: new { @rows = 5, @cols = 30 })
                        @Html.ValidationMessageFor(model => model.Manifesto, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.HiddenFor(model => model.EmployeeId, new { Value = Session["employeeId"] })
                </div>
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="submit" name="submit" class="btn btn-info" value="Create candidate" />
                        <input type="reset" name="reset" class="btn btn-warning" value="Reset" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
