@model UVote.Models.CampaignModel
@{
    ViewBag.Title = "Add campaign";
}
@section Logged{
    @if (Session["employeeId"] == null)
    {
        Response.Redirect(Url.Action("Login", "admin"));
    }
}
<h2>Add campaign</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" class="active">@Html.ActionLink("Add campaign", "Create", "Campaign")</li>
            <li role="presentation">@Html.ActionLink("Add candidate", "Create", "Candidate")</li>
            <li role="presentation">@Html.ActionLink("Add student", "Create", "Student")</li>
        </ul>
    </div>
    
    <div class="col-md-8">
        @using (Html.BeginForm("Create", "Campaign", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleTitle, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.RoleTitle)
                        @Html.ValidationMessageFor(model => model.RoleTitle, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleDetails, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.RoleDetails)
                        @Html.ValidationMessageFor(model => model.RoleDetails, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OfficeTerm, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.OfficeTerm)
                        @Html.ValidationMessageFor(model => model.OfficeTerm, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CampaignStart, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.CampaignStart, new { @placeholder = "YYYY-MM-DD" })
                        @Html.ValidationMessageFor(model => model.CampaignStart, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CampaignEnd, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.CampaignEnd, new { @placeholder = "YYYY-MM-DD" })
                        @Html.ValidationMessageFor(model => model.CampaignEnd, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.HiddenFor(model => model.EmployeeId, new { Value = Session["employeeId"] })
                </div>
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4">
                        <input type="submit" name="submit" class="btn btn-info" value="Generate campaign" />
                        <input type="reset" name="reset" class="btn btn-warning" value="Reset" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>