@using UVote.Models
@model IEnumerable<Campaign>
@{
    ViewBag.Title = "Index";
}
@section Logged{
    @if (Session["employeeId"] == null)
    {
        Response.Redirect(Url.Action("Login", "admin"));
    }
}
<h2>Campaigns</h2>
<div class="row">
    <div class="col-md-4">
        @Html.ActionLink("Back to Home", "Index", "Admin")
    </div>
</div>
<hr />
<div class="col-md-4 col-md-offset-4">
    @if (Model == null)
    {
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>No pending campaigns!</strong>.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="panel panel-info">
                <div class="panel-heading">@Html.ActionLink(@item.RoleTitle, "Details/"+@item.CampaignId, "Campaign")</div>
                <div class="panel-body">
                    <h6>Role details: @item.RoleDetails</h6>
                    <h6>Term: @item.OfficeTerm</h6>
                    <h6>Campaign start: @item.CampaignStart</h6>
                    <h6>Campaign end: @item.CampaignEnd</h6> 
                </div>
            </div>
        }
    }
</div>
 
